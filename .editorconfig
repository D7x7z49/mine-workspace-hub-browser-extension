root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{html}]
charset = utf-8
indent_style = space
indent_size = 2

[*.{css}]
charset = utf-8
indent_style = space
indent_size = 2

[*.{js,cjs,mjs,ts,jsx,tsx}]
charset = utf-8
indent_style = space
indent_size = 2
max_line_length = 120

[*.{json,yml}]
charset = utf-8
indent_style = space
indent_size = 2

[.parcelrc]
charset = utf-8
indent_style = space
indent_size = 2

[*.{md}]
charset = utf-8
indent_style = space
indent_size = 2
max_line_length = 120
